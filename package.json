{
  "name": "mghosting-video-watermark",
  "version": "1.0.0",
  "description": "Profesyonel video watermarking uygulaması - Blind Watermark ile güvenli video koruma",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps && node scripts/setup-ffmpeg.js && node scripts/setup-openh264.js || echo OpenH264 setup skipped",
    "setup-ffmpeg": "node scripts/setup-ffmpeg.js",
    "setup-openh264": "node scripts/setup-openh264.js"
  },
  "keywords": [
    "electron",
    "video",
    "watermark",
    "blind-watermark",
    "ffmpeg"
  ],
  "author": "MGhosting",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "lowdb": "^6.1.1",
    "seek-bzip": "^1.0.6"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3"
  },
  "build": {
    "appId": "com.mghosting.videowatermark",
    "productName": "MGhosting Video Watermark",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!python/venv/**",
      "!python/__pycache__/**",
      "!temp/**",
      "!output/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/icon.ico"
    },
    "extraResources": [
      {
        "from": "python",
        "to": "python",
        "filter": ["*.py", "requirements.txt"]
      }
    ]
  }
}
